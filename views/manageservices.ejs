<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Manage Services</title>
    <link rel="stylesheet" href="/css/style2.css">
</head>
<body>
    <main>
        <div class="services-box">
            <header>
                <h2>Manage Services</h2>
                <button onclick="location.href='/admin'">Back to Dashboard</button>
            </header>
            <section class="service-list">
                <h3>Available Services</h3>
                <table>
                    <thead>
                        <tr>
                            <th>Service Name</th>
                            <th>Description</th>
                            <th>Category</th>
                            <th>Price</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        <% services.forEach(service => { %>
                            <tr>
                                <td><%= service.service_name %></td>
                                <td><%= service.description %></td>
                                <td><%= service.category %></td>
                                <td>$<%= service.price.toFixed(2) %></td>
                                <td>
                                    <button onclick="editService('<%= service.service_id %>', '<%= service.service_name %>', '<%= service.description %>', '<%= service.category %>', '<%= service.price %>')">Edit</button>
                                    <form action="/inactivateservice/<%= service.service_id %>" method="post" style="display:inline;">
                                        <button type="submit">Inactivate</button>
                                    </form>                                    
                                </td>
                            </tr>
                        <% }); %>
                    </tbody>
                </table>
            </section>
            <section class="add-service">
                <h3 id="form-title">Add New Service</h3>
                <form id="service-form" action="/addservice" method="post" class="add-service-form" onsubmit="return validateForm()">
                    <input type="hidden" id="service-id" name="service_id">
                    <label for="service-name">Service Name:</label>
                    <input type="text" id="service-name" name="service_name" required>
                    <label for="service-description">Description:</label>
                    <input type="text" id="service-description" name="description" required>
                    <label for="service-category">Category:</label>
                    <select id="service-category" name="category" required>
                        <optgroup label="Maintenance">
                            <option value="cleaning">Cleaning</option>
                            <option value="repair">Repair</option>
                            <option value="plumbing">Plumbing</option>
                            <option value="electrical">Electrical</option>
                            <option value="hvac">HVAC</option>
                        </optgroup>
                        <optgroup label="Home Improvement">
                            <option value="painting">Painting</option>
                            <option value="landscaping">Landscaping</option>
                            <option value="roofing">Roofing</option>
                            <option value="exterior">Exterior Maintenance</option>
                            <option value="home-improvement">Home Improvement</option>
                        </optgroup>
                        <optgroup label="Specialized Services">
                            <option value="pest-control">Pest Control</option>
                            <option value="security">Security</option>
                            <option value="gardening">Gardening</option>
                            <option value="recycling">Recycling</option>
                        </optgroup>
                        <option value="other">Other</option>
                    </select>

                    <label for="service-price">Price:</label>
                    <input type="number" id="service-price" name="price" step="1" required>
                    <div id="error-message" style="color: red; display: none;"></div>
                    <button type="submit" id="form-button">Add Service</button>
                </form>
            </section>
        </div>
    </main>
    <script src="/script/manage-services.js"></script>
</body>
</html>
